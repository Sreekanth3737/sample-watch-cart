<section class="vh-100 " style="background-color:rgb(243, 245, 249); ma">
  <div class="container  mt-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            {{!-- <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://www.tissotwatches.com/media/home/watch_for_him_seastar.jpg?im=Resize=(1785,2205),aspect=fill;Crop=(0,0,1785,2205),gravity=Center"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; height:100%"  />
            </div> --}}
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                {{!-- <form action="/admin/add-category" method="post"> --}}
             <form action="/admin/add-banners" method="post" enctype="multipart/form-data">

                    

                  <div class="d-flex align-items-center mb-3 pb-1">
                    {{!-- <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i> --}}
                    <span class="h1 fw-bold mb-0">Watch-Cart</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Add new Banner</h5>


                  <label for=""><span>Add Image</span></label>
                    <input name="image"  type="file"  class="form-control" required>
                    <br>
                   
                    <label for=""><span>Add description</span></label>
                    <input type="text" name="description" class="form-control" required>

                 <br>

                  <div class="pt-1 mb-4">
                    {{!-- <button class="btn btn-dark btn-lg btn-block" type="button">Login</button> --}}
                    <input class="btn btn-warning btn-block btn-lg gradient-custom-4 text-body" type="submit" value="Add Banner" required>
<hr>
                  </div>

                  
                  
                </form>

                


              </div>
            </div>

            <table class="table mt-5 mb-5" id="categoryTable border rounded border-secondary">
                    <thead>
                        <tr>
                            <th scope="col">Description</th>
                            <th scope="col">Image</th>
                             <th scope="col">Options</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        {{#each viewBannerImg}}
                        <tr>
                            <td>{{this.description}}</td>
                            <td><img style="width:70px;height:70px;object-fit: cover;" src="/images/{{this.img}}" alt=""></td>
                            <td class="td-icon ">

                                <a  href="/admin/delete-banner/{{this._id}}" class="btn btn-primary" style="color: black;"
                                    onclick="return confirm('Are you want to delete{{this.img}}?')">Delete</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

          </div>
        </div>
      </div>

        
             

    </div>
  </div>
</section>

