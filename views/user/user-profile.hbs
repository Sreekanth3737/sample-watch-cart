
<section class="vh-100" style="background-color:rgb(230, 232, 242);">
  <div class="container py-5 h-50">
    <div class="row d-flex justify-content-center  align-items-center h-50 ">
        {{#if user}}
      <div class="col col-xl-10 ">
        <div class="card mt-5 mb-5" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://www.tissotwatches.com/media/home/Categorie_276x663_5a.jpg"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; height:100%"  />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center ">
              <div class="card-body p-3 p-lg-5 text-black ">

                <form action="/user-profile/{{user._id}}" method="post">

                  <div class="d-flex align-items-center mb-3 pb-1">
                    {{!-- <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i> --}}
                    <span class="h1 fw-bold mb-0">Patek Philippe</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Hello {{user.name}}</h5>

                    <div class="form-outline mb-3">
                    <input type="text" name="name" id="form2Example17" value="{{user.name}}" class="form-control form-control-lg" required/>
                    {{!-- <label class="form-label" for="form2Example17">First Name</label> --}}
                  </div>
                  
                  <div class="form-outline mb-3">
                    <input type="text" name="mobile" id="form2Example17" value="{{user.mobile}}" class="form-control form-control-lg" required/>
                    {{!-- <label class="form-label" for="form2Example17">Mobile</label> --}}
                  </div>

                  <div class="form-outline mb-3">
                    <input type="email" name="email" id="form2Example17" value="{{user.email}}" class="form-control form-control-lg" required/>
                    {{!-- <label class="form-label" for="form2Example17">Email address</label> --}}
                  </div>

                  

                 
                  <div class="form-outline mb-3">
                    <input type="text" name="address" value="{{user.address}}" id="form2Example17" class="form-control form-control-lg" required/>
                    {{!-- <label class="form-label" for="form2Example17">Address</label> --}}
                  </div>

                  <div class="form-outline mb-3">
                    <input type="text" name="pincode" value="{{user.pincode}}" id="form2Example17" class="form-control form-control-lg" required />
                    {{!-- <label class="form-label" for="form2Example17">Pincode</label> --}}
                  </div>

                  <div class="form-outline mb-3">
                    <input type="text" name="city" value="{{user.city}}" id="form2Example17" class="form-control form-control-lg" required/>
                    {{!-- <label class="form-label" for="form2Example17">City</label> --}}
                  </div>

                  <div class="form-outline mb-3">
                    <input type="text" name="state" value="{{user.state}}" id="form2Example17" class="form-control form-control-lg" required />
                    {{!-- <label class="form-label" for="form2Example17">State</label> --}}
                  </div>


                  <div class="pt-1 mb-3">
                                        <input class="btn btn-warning btn-block btn-lg gradient-custom-4 text-body" type="submit" value="Save" >

                  </div>

                                   
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
      {{/if}}
    </div>
  </div>
</section>
